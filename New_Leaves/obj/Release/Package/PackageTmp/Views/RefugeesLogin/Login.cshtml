@model New_Leaves.Models.RefugeeLogin
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal contact-form">
        <h3 class="centered">Beneficiary Login</h3>
        <center><span style=" center; color indianred;">@ViewBag.Message</span></center>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.AuthorityCode, "Beneficiary Code", htmlAttributes: new { @class = "col-md-offset-4 col-md-4 col-xs-offset-1 col-xs-10" })
            <div class="col-md-offset-4 col-md-4 col-xs-offset-1 col-xs-10">
                @Html.EditorFor(model => model.AuthorityCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AuthorityCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-md-offset-4 col-md-4 col-xs-offset-1 col-xs-10" })
            <div class="col-md-offset-4 col-md-4 col-xs-offset-1 col-xs-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RememberMe, htmlAttributes: new { @class = "col-md-offset-4 col-md-4 col-xs-offset-1 col-xs-10" })
            <div class="col-md-offset-4 col-md-4 col-xs-offset-1 col-xs-10">
                <div class="checkbox pull-right">
                    @Html.EditorFor(model => model.RememberMe)
                    @Html.ValidationMessageFor(model => model.RememberMe, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-8">
                <input type="submit" value="Login" class="btn-theme btn-style-two pull-right" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
