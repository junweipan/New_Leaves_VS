
@{
    ViewBag.Title = "Verify Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Verify your account</h2>

 @if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
{
    <div class="alert alert-success">
        <h3>Account created succesfully</h3> 
        <p>Account has been activated successfully.</p>  
        <p>Click here to @Html.ActionLink("Login", "Login", "DonorRegister")</p>
    </div>
}
else
{
    <div class="alert alert-danger">
        <strong>There was an error creating you account. Please contact support at support@newleaves.com </strong> @ViewBag.Message
    </div>
}