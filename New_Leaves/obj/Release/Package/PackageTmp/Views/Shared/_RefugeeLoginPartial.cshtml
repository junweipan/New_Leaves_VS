        <div class="clearfix">

            <div class="pull-left logo-outerpadding0">
                <div class="logo"><a href='@Url.Action("RefugeeIndex", "Home")'><img src="~/images/logo_small.png"></a></div>
            </div>

            <div class="nav-outer clearfix">
                <!-- Main Menu -->
                <nav class="main-menu">


                    <div class="navbar-collapse collapse clearfix">
