@model New_Leaves.Models.Wish_List

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutRefugee.cshtml";
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script>
  $( function() {
      $("#datepicker").datepicker({
          dateFormat: "d/M/yy"
      });
  } );
</script>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal contact-form">
        <h3>Edit an item from your wishlist</h3>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Wish_List_ID)

        <div hidden="hidden" class="form-group">
            @Html.LabelFor(model => model.RID, "RID", htmlAttributes: new { @class = "col-md-offset-3 col-md-6" })
            <div class="col-md-offset-3 col-md-6">
                @Html.DropDownList("RID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Item_ID, "Item name", htmlAttributes: new { @class = "col-md-offset-3 col-md-6" })
            <div class="col-md-offset-3 col-md-6">
                @Html.DropDownList("Item_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Item_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div hidden="hidden" class="form-group">
            @Html.LabelFor(model => model.Create_Date, htmlAttributes: new { @class = "col-md-offset-3 col-md-6" })
            <div class="col-md-offset-3 col-md-6">
                @Html.EditorFor(model => model.Create_Date, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Create_Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">

            @Html.Label("Diliver it after:", htmlAttributes: new { @class = "col-md-offset-3 col-md-6" })
            <div class="col-md-offset-3 col-md-6">

                @Html.TextBoxFor(model => model.Hope_Delivery_Date, "{0:dd/MMM/yyyy}", new { datepicker = true, @class = "form-control", id = "datepicker" })
            </div>
        </div>

        <div hidden="hidden" class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "col-md-offset-3 col-md-6" })
            <div class="col-md-offset-3 col-md-6">
                @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "col-md-offset-3 col-md-6" })
            <div class="col-md-offset-3 col-md-6">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div hidden="hidden" class="form-group">
            @Html.LabelFor(model => model.AuthorityCode, htmlAttributes: new { @class = "col-md-offset-3 col-md-6" })
            <div class="col-md-offset-3 col-md-6">
                @Html.EditorFor(model => model.AuthorityCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.AuthorityCode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-9 pull-right">
                <input type="submit" value="Save" class="theme-btn btn-style-two" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Go back to wishlist", "ShowWishList", new { code = User.Identity.Name})
</div>
