@model New_Leaves.Models.Wish_List

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_LayoutRefugee.cshtml";
}


<div class="delete-record">
    <h2>Delete</h2>
    <h4>Are you sure you want to delete this item from you wishlist?</h4>
    <dl class="dl-horizontal col-md-offset-3 col-md-6">
        <dt> Estimated date of arrival</dt>
        <dd> @Html.DisplayFor(model => model.Hope_Delivery_Date) </dd>

        <dt> @Html.DisplayNameFor(model => model.Status) </dt>
        <dd> @Html.DisplayFor(model => model.Status)</dd>

        <dt> Item</dt>
        <dd> @Html.DisplayFor(model => model.Item.Item_Name) </dd>

        <dt> Item for </dt>
        <dd> @Html.DisplayFor(model => model.Refugee.RefugeeFName) </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color col-md-12 text-center">
            <input type="submit" value="Delete" class="theme-btn btn-style-one" /> |
            @Html.ActionLink("Go back to wishlist", "ShowWishList", new { code = User.Identity.Name }, new { @class= "theme-btn btn-style-four" })
        </div>
    }
</div>
