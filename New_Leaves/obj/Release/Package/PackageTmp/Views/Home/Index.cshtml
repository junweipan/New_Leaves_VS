@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--Main Slider-->
<section class="main-slider" data-start-height="750" data-slide-overlay="yes">

    <div class="tp-banner-container">
        <div class="tp-banner">
            <ul>

                <li data-transition="fade" data-slotamount="1" data-masterspeed="1000" data-thumb="images/slide-image-1.jpg" data-saveperformance="off" data-title="Awesome Title Here">
                    <img src="../images/slide-image-1.jpg" alt="" data-bgposition="center top" data-bgfit="cover" data-bgrepeat="no-repeat">

                    <div class="tp-caption sfb sfb tp-resizeme"
                         data-x="center" data-hoffset="0"
                         data-y="center" data-voffset="0"
                         data-speed="1500"
                         data-start="500"
                         data-easing="easeOutExpo"
                         data-splitin="none"
                         data-splitout="none"
                         data-elementdelay="0.01"
                         data-endelementdelay="0.3"
                         data-endspeed="1200"
                         data-endeasing="Power4.easeIn">
                        <div class="slide-content">
                            <div class="slider-border"></div>
                            <div class="title">Show Your Love</div>
                            <h2>Make Them Smile Again </h2>
                            <div class="text">Our only wish is to keep them smiling</div>
                            <a href="@Url.Action("LearnMore", "Home")" class="theme-btn btn-style-two">Learn more</a>
                        </div>
                    </div>

                </li>

                <li data-transition="fade" data-slotamount="1" data-masterspeed="1000" data-thumb="images/slide-image-2.jpg" data-saveperformance="off" data-title="Awesome Title Here">
                    <img src="../images/slide-image-3.jpg" alt="" data-bgposition="center top" data-bgfit="cover" data-bgrepeat="no-repeat">

                    <div class="tp-caption sfl sfb tp-resizeme"
                         data-x="center" data-hoffset="0"
                         data-y="center" data-voffset="0"
                         data-speed="1500"
                         data-start="500"
                         data-easing="easeOutExpo"
                         data-splitin="none"
                         data-splitout="none"
                         data-elementdelay="0.01"
                         data-endelementdelay="0.3"
                         data-endspeed="1200"
                         data-endeasing="Power4.easeIn">
                        <div class="slide-content">
                            <div class="slider-border"></div>
                            <div class="title">Support refugee women homemakers</div>
                            <h2>Homely Home</h2>
                            <div class="text">Your donation is very important</div>
                            <a href="@Url.Action("About", "Home")" class="theme-btn btn-style-two">Learn more</a>
                        </div>
                    </div>
                </li>
            </ul>


        </div>
    </div>
</section>
<!--End Main Slider-->

<!--Services Section-->
<section class="services-section">
    <div class="auto-container">
        <!--Sec Title-->
        <div class="sec-title centered">
            <div class="title">Show your love</div>
            <h2>We need your help Now!!</h2>
            <div class="text">More and more refugees came to Australia in recent years. Australia Government offered them new houses to live in. Men will go out for work. Thus, some women will be in charge of the house making thing. However, they cannot afford all the expenditure of the furniture and household items.</div>
        </div>
        <div class="row clearfix">
            <!--Services Block-->
            <div class="services-block col-md-3 col-sm-6 col-xs-12">
                <div class="inner-box wow fadeInLeft" data-wow-delay="0ms" data-wow-duration="1500ms">
                    <div class="icon-box">
                        <span class="icon"><img src="../images/icon-3.png" alt="" /></span>
                    </div>
                    <h3><a href="#">Make donations</a></h3>
                    <div class="lower-box">
                        <div class="curved-box"></div>
                        <div class="text">Donate furniture for People who need help</div>
                        <a href="@Url.Action("Index", "Wish_List")" class="theme-btn btn-style-three">Read More</a>
                    </div>
                </div>
            </div>

            <!--Services Block-->
            <div class="services-block col-md-3 col-sm-6 col-xs-12">
                <div class="inner-box wow fadeInLeft" data-wow-delay="300ms" data-wow-duration="1500ms">
                    <div class="icon-box">
                        <span class="icon"><img src="../images/icon-5.png" alt="" /></span>
                    </div>
                    <h3><a href="#">Every step count</a></h3>
                    <div class="lower-box">
                        <div class="curved-box"></div>
                        <div class="text">We do not need much, but a place to live</div>
                        <a href="@Url.Action("LearnMore", "Home")" class="theme-btn btn-style-three">Read More</a>
                    </div>
                </div>
            </div>

            <!--Services Block-->
            <div class="services-block col-md-3 col-sm-6 col-xs-12">
                <div class="inner-box wow fadeInLeft" data-wow-delay="600ms" data-wow-duration="1500ms">
                    <div class="icon-box">
                        <span class="icon"><img src="../images/icon-6.png" alt="" /></span>
                    </div>
                    <h3><a href="services.html">Give a second chance</a></h3>
                    <div class="lower-box">
                        <div class="curved-box"></div>
                        <div class="text">Let us fill the world with love, we need your support.</div>
                        <a href="@Url.Action("SecondChance", "Home")" class="theme-btn btn-style-three">Read More</a>
                    </div>
                </div>
            </div>

            <!--Services Block-->
            <div class="services-block col-md-3 col-sm-6 col-xs-12">
                <div class="inner-box wow fadeInLeft" data-wow-delay="900ms" data-wow-duration="1500ms">
                    <div class="icon-box">
                        <span class="icon"><img src="../images/icon-7.png" alt="" /></span>
                    </div>
                    <h3><a href="services.html">Fast Response</a></h3>
                    <div class="lower-box" style="background-image:url(images/resource/services-1.jpg);">
                        <div class="curved-box"></div>
                        <div class="text">We will do our best to help refugees as soon as possible.</div>
                        <a href="@Url.Action("FastResponse", "Home")" class="theme-btn btn-style-three">Read More</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<!--End Services Section-->

<!--Counter Section-->
<section class="counter-section" style="background-image:url(../images/background/2.jpg);">
    <div class="auto-container">
        <!--Sec Title-->
        <div class="sec-title light centered">
            <div class="title">We’ve Completed</div>
            <h3><span>179 WishLists</span> Successfully</h3>
        </div>
        <!--Fact Counter-->
        <div class="fact-counter">
            <div class="row clearfix">

                <!--Column-->
                <div class="column counter-column col-md-3 col-sm-6 col-xs-12">
                    <div class="inner">
                        <div class="icon-box"><span class="icon flaticon-water-drop"></span></div>
                        <h4 class="counter-title">Donations</h4>
                        <div class="count-outer count-box">
                            <span class="count-text" data-speed="2500" data-stop="1236">1500</span>
                            <span class="plus">+</span>
                        </div>
                    </div>
                </div>

                <!--Column-->
                <div class="column counter-column col-md-3 col-sm-6 col-xs-12">
                    <div class="inner">
                        <div class="icon-box"><span class="icon flaticon-leaves"></span></div>
                        <h4 class="counter-title">New Homes</h4>
                        <div class="count-outer count-box">
                            <span class="plus"></span>
                            <span class="count-text" data-speed="2000" data-stop="75">75</span>
                            <span class="plus"></span>
                        </div>
                    </div>
                </div>

                <!--Column-->
                <div class="column counter-column col-md-3 col-sm-6 col-xs-12">
                    <div class="inner">
                        <div class="icon-box"><span class="icon flaticon-smile"></span></div>
                        <h4 class="counter-title">Donors</h4>
                        <div class="count-outer count-box">
                            <span class="count-text" data-speed="3500" data-stop="2760">2000</span>
                            <span class="plus">+</span>
                        </div>
                    </div>
                </div>

                <!--Column-->
                <div class="column counter-column col-md-3 col-sm-6 col-xs-12">
                    <div class="inner">
                        <div class="icon-box"><span class="icon flaticon-medal"></span></div>
                        <h4 class="counter-title">Best Donor</h4>
                        <div class="count-outer count-box">
                            <span class="count-text" data-speed="2000" data-stop="39">Bruce Wayne</span>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</section>
<!--End Counter Section-->

