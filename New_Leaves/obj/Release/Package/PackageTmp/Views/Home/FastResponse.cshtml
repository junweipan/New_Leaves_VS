@{
    ViewBag.Title = "FastResponse";
    ViewBag.Title = "Save your time";

    if (this.User.Identity.Name.Length.Equals(8) && !User.Identity.Name.Contains("com"))
    {
        Layout = "~/Views/Shared/_LayoutRefugee.cshtml";
    }
    else { Layout = "~/Views/Shared/_Layout.cshtml"; }
}
<!--Page Title-->
<section class="page-title" style="background-image:url(images/background/5.jpg);">
    <div class="auto-container">
        <div class="inner-box">
            <h1>Fast Response</h1>
            <ul class="bread-crumb">
                <li><a href="@Url.Action(" Index","Home")">Home</a></li>
                <li>Fast Response</li>
            </ul>
        </div>
    </div>
</section>
<!--End Page Title-->
<!--About Section-->
<section class="about-section">
    <div class="auto-container">
        <div class="row clearfix">
            <!--Image Column-->
            <div class="image-column col-md-6 col-sm-12 col-xs-12">
                <div class="image">
                    <img src="~/images/resource/pic1.png" alt="" />
                </div>
            </div>
            <!--Content Column-->
            <div class="content-column col-md-6 col-sm-12 col-xs-12">
                <div class="inner">
                    <div class="sec-title">
                        <div class="title">Delivery and Response</div>
                        <h2>Provides fast response...!<br></h2>
                    </div>
                    <div class="dark-text">We understand that how much time is important and how much our benefeciaries will be in a need of the furniture.</div>
                    <div class="text">
                         We provide fast response to our beneficiaries by providing them with what they are in need in juast a matter of days. The reason is that we know how much difficult is to
                        start a new life in a new place with completely different culture and people. 
                        Our promise is to save time and money for our beneficiaries so that they can start a new life easily.
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--End About Section-->
<!--Services Section-->
<section class="services-section style-two">
    <div class="auto-container">
        <!--Sec Title-->
        <div class="sec-title centered">
            <div class="sub-title">Our Motive</div>
            <h2>Provide fast delivery</h2>
        </div>

        <div class="row clearfix">
            <!--Services Block Two-->
            <div class="services-block-two col-md-3 col-sm-6 col-xs-12">
                <div class="inner-box wow fadeInLeft" data-wow-delay="0ms" data-wow-duration="1500ms">
                    <div class="icon-box">
                        <span class="icon"><img src="~/images/resource/text1.png" alt="" /></span>
                    </div>
                    <h3>SMS</h3>
                    <div class="overlay-box">
                        <div class="overlay-inner">
                            <div class="content">
                                <h4>SMS</h4>
                                <div class="text">Enquire about delivery or other information.</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--Services Block Two-->
            <div class="services-block-two col-md-3 col-sm-6 col-xs-12">
                <div class="inner-box wow fadeInLeft" data-wow-delay="300ms" data-wow-duration="1500ms">
                    <div class="icon-box">
                        <span class="icon"><img src="~/images/resource/call1.png" alt="" /></span>
                    </div>
                    <h3>Call</h3>
                    <div class="overlay-box">
                        <div class="overlay-inner">
                            <div class="content">
                                <h4>24/7 Support</h4>
                                <div class="text">Call anytime tfor donating furniture and money.</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--Services Block Two-->
            <div class="services-block-two col-md-3 col-sm-6 col-xs-12">
                <div class="inner-box wow fadeInLeft" data-wow-delay="600ms" data-wow-duration="1500ms">
                    <div class="icon-box">
                        <span class="icon"><img src="~/images/resource/email.png" alt="" /></span>
                    </div>
                    <h3>Email</h3>
                    <div class="overlay-box">
                        <div class="overlay-inner">
                            <div class="content">
                                <h4>Email</h4>
                                <div class="text">Ask for terms and conditions for donations by emailing us.</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--Services Block Two-->
            <div class="services-block-two col-md-3 col-sm-6 col-xs-12">
                <div class="inner-box wow fadeInLeft" data-wow-delay="900ms" data-wow-duration="1500ms">
                    <div class="icon-box">
                        <span class="icon"><img src="~/images/resource/enquiry.png" alt="" /></span>
                    </div>
                    <h3>Enquiry Form</h3>
                    <div class="overlay-box">
                        <div class="overlay-inner">
                            <div class="content">
                                <h4>Enquiry Form</h4>
                                <div class="text">One click for all your enquiries by filling enquiry form.</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<!--End Services Section-->
