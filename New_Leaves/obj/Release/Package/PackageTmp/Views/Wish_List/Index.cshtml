@model IEnumerable<New_Leaves.Models.Wish_List>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="all-wishlists">
    <h2>All wishlists items</h2>

    <table id="wishlists-table" class="table table-responsive">


        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Item.Icon)
                </th>
                <th>
                    Item
                </th>
                <th class="hidden-xs">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="hidden-xs">
                    @Html.DisplayNameFor(model => model.Item.Category)
                </th>
                <th></th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Item.Icon)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Item.Item_Name)
                </th>
                <th class="hidden-xs">
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th class="hidden-xs">
                    @Html.DisplayNameFor(model => model.Item.Category)
                </th>
                <th></th>
            </tr>
        </tfoot>
        <tbody>
            @foreach (var item in Model)
            {
                if (item.Status.Equals("Not deliverd"))
                {
                    <tr>
                        <td>
                           <img class="img-responsive" src="@Html.DisplayFor(model => item.Item.Icon)" />   
                        </td>
                        <td>
                           <p>@Html.DisplayFor(modelItem => item.Item.Item_Name)</p> 
                        </td>
                        <td class="hidden-xs">
                            <p>@Html.DisplayFor(modelItem => item.Description)</p>
                        </td>
                        <td class="hidden-xs">
                           <p>@Html.DisplayFor(modelItem => item.Item.Category)</p>
                        </td>
                        <td>
                            @Html.ActionLink("Donate", "Create", "Donations", new { id = item.Wish_List_ID }, new { @class = "btn-theme btn-style-six" })<br />
                            @*@Html.ActionLink("Details", "Details", new { id = item.Wish_List_ID })*@
                            @*@Html.ActionLink("Delete", "Delete", new { id=item.Wish_List_ID })*@
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>

</div>
