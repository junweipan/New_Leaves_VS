@model IEnumerable<New_Leaves.Models.Donation>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="all-wishlists">
    <h2 class="all-wishlists">Donation History</h2>

    <table class="table">
        <tr>
            <th>Item</th>
            <th>@Html.DisplayNameFor(model => model.Donate_Date)</th>
            <th>Pick up address</th>
            <th>@Html.DisplayNameFor(model => model.Wish_List.Status)</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Item_Name)</td>
                <td>@Html.DisplayFor(modelItem => item.Donate_Date)</td>
                <td>@Html.DisplayFor(modelItem => item.Status)</td>
                <td>@Html.DisplayFor(modelItem => item.Wish_List.Status)</td>
            </tr>
        }

    </table>
    <center>
        <p class="theme-btn btn-style-four">@Html.ActionLink("Return to my account", "DonorDetails", "DonorManage", new { code = User.Identity.Name }, null)</p>
    </center>
</div>