@model New_Leaves.Models.Refugee

@{
    ViewBag.Title = "RefugeeDetails";
    Layout = "~/Views/Shared/_LayoutRefugee.cshtml";
}

<div class="col-md-12 refugee-details">
    <div class="col-md-offset-2 col-md-10">
        <h2>Personal Information</h2>
        @Html.ActionLink("see wish list", "ShowWishList", new { code = User.Identity.Name }, new { @class = "theme-btn btn-style-four" })

        @Html.ActionLink("Modify Profile", "RefugeeModifyAccount", new { id = Model.RID }, new { @class = "theme-btn btn-style-four" })
        @Html.ActionLink("Change Password", "ChangePassword", new { code = User.Identity.Name }, new { @class = "theme-btn btn-style-four" })
    </div>
    
    <hr />
    <div class="col-md-12">
        <dl class="dl-horizontal col-md-offset-2 col-md-8">
            <dt> First Name </dt>
            <dd> @Html.DisplayFor(model => model.RefugeeFName) </dd>

            <dt> @Html.DisplayNameFor(model => model.RefugeeLName)</dt>
            <dd> @Html.DisplayFor(model => model.RefugeeLName)</dd>

            <dt> @Html.DisplayNameFor(model => model.Postcode)</dt>
            <dd> @Html.DisplayFor(model => model.Postcode)</dd>

            <dt> @Html.DisplayNameFor(model => model.Email) </dt>
            <dd> @Html.DisplayFor(model => model.Email)</dd>

            <dt> @Html.DisplayNameFor(model => model.Street) </dt>
            <dd> @Html.DisplayFor(model => model.Street) </dd>

            <dt> @Html.DisplayNameFor(model => model.Suburb)</dt>
            <dd> @Html.DisplayFor(model => model.Suburb) </dd>

            <dt> @Html.DisplayNameFor(model => model.State) </dt>
            <dd> @Html.DisplayFor(model => model.State)</dd>

            <dt> @Html.DisplayNameFor(model => model.Phone)</dt>
            <dd> @Html.DisplayFor(model => model.Phone) </dd>

            <dt> @Html.DisplayNameFor(model => model.Family_Description)</dt>
            <dd> @Html.DisplayFor(model => model.Family_Description)</dd>
        </dl>
    </div>
  
</div>

