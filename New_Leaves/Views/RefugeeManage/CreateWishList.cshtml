@model New_Leaves.Models.Wish_List

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutRefugee.cshtml";
}
<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<link rel="stylesheet" href="/resources/demos/style.css">
<script src="https://code.jquery.com/jquery-1.12.4.js"></script>
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
<script>
  $( function() {
      $("#datepicker").datepicker({
          dateFormat: "dd/mm/yy"
      });
  } );
</script>
<h2>Items</h2>
<table>
    <tr>
        <th>Item Name:</th>
        <th>Category:</th>
        <th>Date:</th>
    </tr>
    @foreach (var x in @ViewBag.list)
    {
        <tr>
            <td>@x.Item.Item_Name</td>
            <td>@x.Item.Category</td>
            <td>@x.List_Submit_Date</td>
        </tr>
    }
</table>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Add more items into wish list</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div hidden="hidden" class="form-group">
            @*
    @Html.LabelFor(model => model.RID, "RID", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.DropDownList("id", null, htmlAttributes: new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.RID, "", new { @class = "text-danger" })
    </div>
            *@
            @Html.TextBoxFor(model => model.RID, new { @Value = @ViewBag.id2 })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Item_ID, "Item_ID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Item_ID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Item_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div hidden="hidden" class="form-group">

            @Html.LabelFor(model => model.List_Submit_Date, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.List_Submit_Date, new { htmlAttributes = new { @class = "form-control",id= "datepicker" } })
                @Html.ValidationMessageFor(model => model.List_Submit_Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div hidden="hidden" class="form-group">
            @Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Status, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </div>
    </div>
}
<div>
    @Html.ActionLink("Finish ", "RefugeeIndex", "Home", new { email = User.Identity.Name }, null)
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
