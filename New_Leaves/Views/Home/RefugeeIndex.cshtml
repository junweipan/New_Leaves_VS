@model New_Leaves.Models.Refugee
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_LayoutRefugee.cshtml";
}


<!--Services Section-->
<section class="services-section">
    <div class="auto-container">
        <!--Sec Title-->
        <div class="sec-title centered">
            <div class="title">Welcome to Blossing Hopes</div>
            <h2>We are doing our best to help you</h2>
            <div class="text">To check the status of the items of your wishlist please click in the link at the top-right corner button "My Wishlist". In case you haven't create one wishlist you can also do it clicking in that button</div>
        </div>
        <div class="row clearfix">
            <!--Services Block-->
            <div class="services-block col-md-3 col-sm-6 col-xs-12">
                <div class="inner-box wow fadeInLeft" data-wow-delay="0ms" data-wow-duration="1500ms">
                    <div class="icon-box">
                        <span class="icon"><img src="../images/icon-3.png" alt="" /></span>
                    </div>
                    <h3><a href="#">Your donations</a></h3>
                    <div class="lower-box">
                        <div class="curved-box"></div>
                        <div class="text">Donate household items or furniture for newcomers</div>
                        <a href="#" class="theme-btn btn-style-three">Read More</a>
                    </div>
                </div>
            </div>

            <!--Services Block-->
            <div class="services-block col-md-3 col-sm-6 col-xs-12">
                <div class="inner-box wow fadeInLeft" data-wow-delay="300ms" data-wow-duration="1500ms">
                    <div class="icon-box">
                        <span class="icon"><img src="../images/icon-5.png" alt="" /></span>
                    </div>
                    <h3><a href="#">Every step count</a></h3>
                    <div class="lower-box">
                        <div class="curved-box"></div>
                        <div class="text">We do not need much, but a place to live</div>
                        <a href="#" class="theme-btn btn-style-three">Read More</a>
                    </div>
                </div>
            </div>

            <!--Services Block-->
            <div class="services-block col-md-3 col-sm-6 col-xs-12">
                <div class="inner-box wow fadeInLeft" data-wow-delay="600ms" data-wow-duration="1500ms">
                    <div class="icon-box">
                        <span class="icon"><img src="../images/icon-6.png" alt="" /></span>
                    </div>
                    <h3><a href="services.html">Give a second chance</a></h3>
                    <div class="lower-box">
                        <div class="curved-box"></div>
                        <div class="text">Let us fill the world with love, we need your support.</div>
                        <a href="#" class="theme-btn btn-style-three">Read More</a>
                    </div>
                </div>
            </div>

            <!--Services Block-->
            <div class="services-block col-md-3 col-sm-6 col-xs-12">
                <div class="inner-box wow fadeInLeft" data-wow-delay="900ms" data-wow-duration="1500ms">
                    <div class="icon-box">
                        <span class="icon"><img src="../images/icon-7.png" alt="" /></span>
                    </div>
                    <h3><a href="services.html">Make a lasting impact</a></h3>
                    <div class="lower-box" style="background-image:url(../images/resource/services-1.jpg);">
                        <div class="curved-box"></div>
                        <div class="text">We will do our best to help refugees as soon as possible.</div>
                        <a href="#" class="theme-btn btn-style-three">Read More</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
<!--End Services Section-->

<!--Counter Section-->
<section class="counter-section" style="background-image:url(../images/background/2.jpg);">
    <div class="auto-container">
        <!--Sec Title-->
        <div class="sec-title light centered">
            <div class="title">We’ve Completed</div>
            <h3><span>179 WishLists</span> Successfully</h3>
        </div>
        <!--Fact Counter-->
        <div class="fact-counter">
            <div class="row clearfix">

                <!--Column-->
                <div class="column counter-column col-md-3 col-sm-6 col-xs-12">
                    <div class="inner">
                        <div class="icon-box"><span class="icon flaticon-water-drop"></span></div>
                        <h4 class="counter-title">Donations</h4>
                        <div class="count-outer count-box">
                            <span class="count-text" data-speed="2500" data-stop="1236">1500</span>
                            <span class="plus">+</span>
                        </div>
                    </div>
                </div>

                <!--Column-->
                <div class="column counter-column col-md-3 col-sm-6 col-xs-12">
                    <div class="inner">
                        <div class="icon-box"><span class="icon flaticon-leaves"></span></div>
                        <h4 class="counter-title">New Homes</h4>
                        <div class="count-outer count-box">
                            <span class="plus"></span>
                            <span class="count-text" data-speed="2000" data-stop="75">75</span>
                            <span class="plus"></span>
                        </div>
                    </div>
                </div>

                <!--Column-->
                <div class="column counter-column col-md-3 col-sm-6 col-xs-12">
                    <div class="inner">
                        <div class="icon-box"><span class="icon flaticon-smile"></span></div>
                        <h4 class="counter-title">Donors</h4>
                        <div class="count-outer count-box">
                            <span class="count-text" data-speed="3500" data-stop="2760">2000</span>
                            <span class="plus">+</span>
                        </div>
                    </div>
                </div>

                <!--Column-->
                <div class="column counter-column col-md-3 col-sm-6 col-xs-12">
                    <div class="inner">
                        <div class="icon-box"><span class="icon flaticon-medal"></span></div>
                        <h4 class="counter-title">Best Donor</h4>
                        <div class="count-outer count-box">
                            <span class="count-text" data-speed="2000" data-stop="39">Bruce Wayne</span>
                        </div>
                    </div>
                </div>

            </div>
        </div>

    </div>
</section>
<!--End Counter Section-->

<!--Fullwidth Section One-->
<section class="fullwidth-section-one">
    <div class="section-outer clearfix">
        <!--Image Column-->
        <div class="image-column" style="background-image:url(../images/fullwidth-1.jpg);">
            <div class="hidden-image">
                <img src="../images/fullwidth-1.jpg" alt="" />
            </div>
        </div> 

        <!--Left Column-->
        <div class="left-column">
            <div class="content">
                <!--Sec Title-->
                <div class="sec-title">
                    <h2>Join <span>our event & helping us by donating</span></h2>
                </div>
                <div class="text">It is an non-profit organization website, we offer nice people in Australia who want to help these refugees, the donor need to register an account in the website, and donate the furniture they want, there are 11 basic household can be donated. They can see the wish list that proposed by refugees.</div>
                <div class="row clearfix">
                    <!--Donate Box-->
                    <div class="donate-box col-md-4 col-sm-4 col-xs-12">
                        <div class="inner">
                            <div class="icon-box">
                                <span class="icon flaticon-piggy-bank"></span>
                            </div>
                            <h3><a href="services.html">Donate Now</a></h3>
                        </div>
                    </div>

                    <!--Donate Box-->
                    <div class="donate-box col-md-4 col-sm-4 col-xs-12">
                        <div class="inner">
                            <div class="icon-box">
                                <span class="icon flaticon-cash"></span>
                            </div>
                            <h3><a href="services.html">Sponsor Projects</a></h3>
                        </div>
                    </div>

                    <!--Donate Box-->
                    <div class="donate-box col-md-4 col-sm-4 col-xs-12">
                        <div class="inner">
                            <div class="icon-box">
                                <span class="icon flaticon-heart"></span>
                            </div>
                            <h3><a href="services.html">Be a Volunteer</a></h3>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</section>
