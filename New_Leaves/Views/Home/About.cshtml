@{
    ViewBag.Title = "About";
    ViewBag.Title = "We believe in second chances";

    if (this.User.Identity.Name.Length.Equals(8) && !User.Identity.Name.Contains("com"))
    {
        Layout = "~/Views/Shared/_LayoutRefugee.cshtml";
    }
    else { Layout = "~/Views/Shared/_Layout.cshtml"; }
}
<!--Page Title-->
<section class="page-title" style="background-image:url(images/background/5.jpg);">
    <div class="auto-container">
        <div class="inner-box">
            <h1>about us</h1>
            <ul class="bread-crumb">
                <li><a href="@Url.Action("Index","Home")">Home</a></li>
                <li>About us</li>
            </ul>
        </div>
    </div>
</section>
<!--End Page Title-->
<!--About Section-->
<section class="about-section">
    <div class="auto-container">
        <div class="row clearfix">
            <!--Image Column-->
            <div class="image-column col-md-6 col-sm-12 col-xs-12">
                <div class="image">
                    <img src="~/images/resource/aboutimage.jpg" alt="" />
                </div>
            </div>
            <!--Content Column-->
            <div class="content-column col-md-6 col-sm-12 col-xs-12">
                <div class="inner">
                    <div class="sec-title">
                        <div class="title">Homely Home</div>
                        <h2>Show Your Love<br></h2>
                    </div>
                    <div class="dark-text">This is a website that people can donate items to refugee families</div>
                    <div class="text">The main purpose of this project is to help refugees who just arrived at Australia to resettle their new homes. People leave their
                     countries and come to Australia with nothing. It is hard and tough for them to start a new life in a unknown country, 
                    thus for people who have a stable and fortunate life like us should give them a hand to help them to built their homes. We wish them have a better life than before.</div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--End About Section-->
<!--Services Section-->
<section class="services-section style-two">
    <div class="auto-container">
        <!--Sec Title-->
        <div class="sec-title centered">
            <div class="sub-title">Our Focus</div>
            <h2>What We Do</h2>
        </div>

        <div class="row clearfix">
            <!--Services Block Two-->
            <div class="services-block-two col-md-3 col-sm-6 col-xs-12">
                <div class="inner-box wow fadeInLeft" data-wow-delay="0ms" data-wow-duration="1500ms">
                    <div class="icon-box">
                        <span class="icon"><img src="../images/resource/icon-1.png" alt="" /></span>
                    </div>
                    <h3>Donation</h3>
                    <div class="overlay-box">
                        <div class="overlay-inner">
                            <div class="content">
                                <h4><a href="services.html">Donation</a></h4>
                                <div class="text">Donate furniture for refugees who need help</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--Services Block Two-->
            <div class="services-block-two col-md-3 col-sm-6 col-xs-12">
                <div class="inner-box wow fadeInLeft" data-wow-delay="300ms" data-wow-duration="1500ms">
                    <div class="icon-box">
                        <span class="icon"><img src="../images/resource/icon-2.png" alt="" /></span>
                    </div>
                    <h3>Everything is Good</h3>
                    <div class="overlay-box">
                        <div class="overlay-inner">
                            <div class="content">
                                <h4><a href="services.html">Everything is Good</a></h4>
                                <div class="text">We do not need much, but a place to live.</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--Services Block Two-->
            <div class="services-block-two col-md-3 col-sm-6 col-xs-12">
                <div class="inner-box wow fadeInLeft" data-wow-delay="600ms" data-wow-duration="1500ms">
                    <div class="icon-box">
                        <span class="icon"><img src="../images/resource/icon-3.png" alt="" /></span>
                    </div>
                    <h3>Warm the World</h3>
                    <div class="overlay-box">
                        <div class="overlay-inner">
                            <div class="content">
                                <h4><a href="services.html">Warm the World</a></h4>
                                <div class="text">Let us fill the world with love, we need your suporrt.</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!--Services Block Two-->
            <div class="services-block-two col-md-3 col-sm-6 col-xs-12">
                <div class="inner-box wow fadeInLeft" data-wow-delay="900ms" data-wow-duration="1500ms">
                    <div class="icon-box">
                        <span class="icon"><img src="../images/resource/icon-4.png" alt="" /></span>
                    </div>
                    <h3>Fast Response</h3>
                    <div class="overlay-box">
                        <div class="overlay-inner">
                            <div class="content">
                                <h4><a href="services.html">Fast Response</</a></h4>
                                <div class="text">We will deliver the donations to them as soon as possible.</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    
</section>
<section>
    <div style="background-color:black; text-align:center">
        <ul>
            <li><a href="@Url.Action("Disclaimer","Home")">Disclaimer</a></li>
        </ul>
    </div>
</section>
<!--End Services Section-->



