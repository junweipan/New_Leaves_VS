                @{
                    List<SelectListItem> listStates = new List<SelectListItem>();
                    listStates.Add(new SelectListItem
                    {
                        Text = "Victoria",
                        Value = "Victoria",
                        Selected = true
                    });
                }
                @Html.DropDownListFor(model => model.State, listStates, "-- Currently only valid in Victoria --", new { htmlAttributes = new { @class = "form-control" } })
